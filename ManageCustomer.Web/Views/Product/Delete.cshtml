@model ManageCustomer.Domain.Entities.Product
@{
 ViewData["Title"] = "Delete Product";
}
<h2 class="page-title">Delete Product</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
 <dl class="row">
 <dt class = "col-sm-2">Product Name</dt>
 <dd class = "col-sm-10">@Model.ProductName</dd>
 <dt class = "col-sm-2">Category</dt>
 <dd class = "col-sm-10">@Model.Category</dd>
 <dt class = "col-sm-2">Unit</dt>
 <dd class = "col-sm-10">@Model.Unit</dd>
 <dt class = "col-sm-2">Color</dt>
 <dd class = "col-sm-10">@Model.Color</dd>
 </dl>
 <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
 <input type="hidden" asp-for="Id" />
 <button type="submit" class="btn btn-danger">Delete</button>
 <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 </form>
</div>
