@model ManageCustomer.Domain.Entities.Product
@{
 ViewData["Title"] = "Edit Product";
}
<h2 class="page-title">Edit Product</h2>
<div class="row justify-content-center">
 <div class="col-md-8 col-lg-6">
 <div class="card shadow-sm border-0">
 <div class="card-body">
 <form asp-action="Edit" method="post">
 <input type="hidden" asp-for="Id" />
 <div class="row">
 <div class="mb-3 col-md-6">
 <label asp-for="ProductName" class="form-label fw-bold"></label>
 <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
 <span asp-validation-for="ProductName" class="text-danger"></span>
 </div>
 <div class="mb-3 col-md-6">
 <label asp-for="Category" class="form-label fw-bold"></label>
 <input asp-for="Category" class="form-control" placeholder="Enter category" />
 <span asp-validation-for="Category" class="text-danger"></span>
 </div>
 </div>
 <div class="row">
 <div class="mb-3 col-md-6">
 <label asp-for="Unit" class="form-label fw-bold"></label>
 <input asp-for="Unit" class="form-control" placeholder="Enter unit" />
 <span asp-validation-for="Unit" class="text-danger"></span>
 </div>
 <div class="mb-3 col-md-6">
 <label asp-for="Color" class="form-label fw-bold"></label>
 <input asp-for="Color" class="form-control" placeholder="Enter color" />
 <span asp-validation-for="Color" class="text-danger"></span>
 </div>
 </div>
 <button type="submit" class="btn btn-primary w-100">Save</button>
 </form>
 <div class="mt-3 text-center">
 <a asp-action="Index" class="btn btn-link">Back to List</a>
 </div>
 </div>
 </div>
 </div>
</div>
