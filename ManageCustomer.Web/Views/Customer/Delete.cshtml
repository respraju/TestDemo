@model ManageCustomer.Domain.Entities.Customer
@{
 ViewData["Title"] = "Delete Customer";
}
<h2 class="page-title">Delete Customer</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
 <dl class="row">
 <dt class = "col-sm-2">
 First Name
 </dt>
 <dd class = "col-sm-10">
 @Model.FirstName
 </dd>
 <dt class = "col-sm-2">
 Last Name
 </dt>
 <dd class = "col-sm-10">
 @Model.LastName
 </dd>
 <dt class = "col-sm-2">
 Email
 </dt>
 <dd class = "col-sm-10">
 @Model.Email
 </dd>
 <dt class = "col-sm-2">
 Phone
 </dt>
 <dd class = "col-sm-10">
 @Model.Phone
 </dd>
 <dt class = "col-sm-2">
 Address
 </dt>
 <dd class = "col-sm-10">
 @Model.Address
 </dd>
 </dl>
 <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this customer?');">
 <input type="hidden" asp-for="Id" />
 <button type="submit" class="btn btn-danger">Delete</button>
 <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 </form>
</div>
